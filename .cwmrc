gap 25 25 25 25

moveamount 15

#fontname "Cozette:pixelsize=11:style=Medium"
fontname "PragmataPro Mono"
#fontname "envypn:pixelsize=15"

# default apps
command "term" "xterm"
command "lock" "slock"

command "• firefox"          "firefox"
command "• terminal"         "xterm"
command "• pinta"            "pinta"
command "• calc"             "galculator"

command "—————————————"      "true"
command "• network"          "nm-connection-editor"
command "• bluetooth"        "blueman-manager"
command "• sound"            "pavucontrol"
command "• display"          "arandr"
command "• wallpaper"        "nitrogen"
command "• dim"              "dim"
command "• screenshot"       "scrot -d 1 -s -e 'xclip -selection clipboard -t image/png < $f'"
command "─────────────"      "true"

command "• lock"             "slock"
command "• logout"           "kill -9 -1"
command "• restart"          "reboot"
command "• poweroff"         "poweroff"

color activeborder orange
color urgencyborder red
color groupborder green
color ungroupborder black

ignore xclock

# let me choose mine
unbind-key all

bind-key C4-Return terminal
bind-key C-Delete  lock
bind-key CMS-r     restart

bind-key C-slash  menu-cmd
bind-key 4-slash  menu-window
bind-key 4S-slash menu-exec

bind-key 4-Return window-hide
bind-key 4-m      window-maximize
bind-key 4-comma  window-vmaximize
bind-key 4-period window-hmaximize
bind-key 4-x      window-close
bind-key 4-n      window-menu-label

bind-key 4-Left   window-move-left
bind-key 4-Down   window-move-down
bind-key 4-Up     window-move-up
bind-key 4-Right  window-move-right

bind-key 4S-Left  window-move-left-big
bind-key 4S-Down  window-move-down-big
bind-key 4S-Up    window-move-up-big
bind-key 4S-Right window-move-right-big

bind-key C4-Left   window-resize-left
bind-key C4-Down   window-resize-down
bind-key C4-Up     window-resize-up
bind-key C4-Right  window-resize-right

bind-key C4S-Left  window-resize-left-big
bind-key C4S-Down  window-resize-down-big
bind-key C4S-Up    window-resize-up-big
bind-key C4S-Right window-resize-right-big

bind-key 4-1 group-toggle-1
bind-key 4-2 group-toggle-2
bind-key 4-3 group-toggle-3
bind-key 4-4 group-toggle-4
bind-key 4-5 group-toggle-5
bind-key 4-6 group-toggle-6
bind-key 4-7 group-toggle-7
bind-key 4-8 group-toggle-8
bind-key 4-9 group-toggle-9
bind-key 4-0 group-toggle-0

bind-key 4-g window-group

bind-key 4S-1 window-movetogroup-1
bind-key 4S-2 window-movetogroup-2
bind-key 4S-3 window-movetogroup-3
bind-key 4S-4 window-movetogroup-4
bind-key 4S-5 window-movetogroup-5
bind-key 4S-6 window-movetogroup-6
bind-key 4S-7 window-movetogroup-7
bind-key 4S-8 window-movetogroup-8
bind-key 4S-9 window-movetogroup-9
bind-key 4S-0 window-movetogroup-0

bind-key M-Tab  window-cycle
bind-key MS-Tab window-rcycle

bind-key 4-Tab  window-cycle-ingroup
bind-key 4S-Tab window-rcycle-ingroup
